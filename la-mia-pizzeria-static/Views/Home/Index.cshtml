@{
    Layout=null;
}

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>La mia pizzeria</title>
  </head>
  <body>
      <header>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 ms-3 h2">La mia pizzeria</span>
            </div>
        </nav>
      </header>

    <main>
        <div class="container">
            <div class="row mt-3">
                <h1>Lista delle pizze</h1>
            </div>

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Immagine</th>
                  <th scope="col">Nome Pizza</th>
                  <th scope="col">Descrizione pizza</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <td><img src="~/img/Pizza-margherita.jpg" class="img-fluid" alt="Pizza Margherita"></td>
                  <td>Pizza Margherita</td>
                  <td>La pizza è molto buona!</td>
                </tr>
                <tr>
                  <th scope="row">2</th>
                  <td><img src="~/img/pizza-wurstel-patatine-pomodoro.jpg" class="img-fluid" alt="Pizza Wurstel e Patatine"></td>
                  <td>Pizza Wurstel e Patatine</td>
                  <td>La pizza è molto buona!</td>
                </tr>
                <tr>
                  <th scope="row">3</th>
                  <td><img src="~/img/pizza-tonno.jpg" class="img-fluid" alt="Pizza Tonno e Cipolle"></td>
                  <td>Pizza Tonno e Cipolle</td>
                  <td>La pizza è molto buona!</td>
                </tr>
                <tr>
                  <th scope="row">4</th>
                  <td><img src="~/img/pizza-al-prosciutto-crudo.jpg" class="img-fluid" alt="Pizza con Prosciutto Crudo"></td>
                  <td>Pizza con Prosciutto Crudo</td>
                  <td>La pizza è molto buona!</td>
                </tr>
              </tbody>
            </table>


        </div>

    </main>
   

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>